#!groovy
//noinspection GroovyUnusedAssignment
@Library("Infrastructure@hmctsdemo") _

import uk.gov.hmcts.contino.Environment

Environment environment = new Environment(env)

onMaster {
  sharedInfrastructurePipeline('ccpay', environment.nonProdName, 'nonprod')
  sharedInfrastructurePipeline('ccpay', environment.prodName, 'prod')
}

onDemo {
  sharedInfrastructurePipeline('ccpay', environment.demoName, 'nonprod')
}

onHMCTSDemo {
  sharedInfrastructurePipeline('ccpay', environment.hmctsDemoName, 'hmctsdemo')
}